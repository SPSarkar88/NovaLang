// Conditionals
function assessPerformance(score) {
    if (score >= 90) {
        return "Excellent";
    } else if (score >= 80) {
        return "Good";
    } else if (score >= 70) {
        return "Satisfactory";
    } else {
        return "Needs Improvement";
    }
}

print("Score 95:", assessPerformance(95));
print("Score 82:", assessPerformance(82));
print("Score 65:", assessPerformance(65));

